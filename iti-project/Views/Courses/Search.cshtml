@model IList<iti_project.Models.Course>
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>
<hr />
<br />
@using (Html.BeginForm("Search", "Courses", FormMethod.Get))
{
    <div class="form-group">
        <p>
            Search Name: @Html.TextBox("Search_Data")
        </p>
        <input type="submit" value="Find" />
    </div>
}

<div class="container">
    <div class="row">
        @if (Model.Count() == 0)
        {
            <p>There is No Courses Available.</p>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-lg-4 mb-4">
                    <div class="card h-100">
                        <h4 class="card-header">@item.Name</h4>
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                        </div>
                        <div class="card-footer">
                            @Html.ActionLink("Learn More", "Details", "Courses", routeValues: new { id = item.ID }, htmlAttributes: new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>